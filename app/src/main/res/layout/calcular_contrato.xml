<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitleContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cálculo de Contrato"
        android:textSize="24sp"
        android:layout_gravity="center"/>

    <!-- EditText para ingresar el nombre -->
    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su nombre"/>

    <!-- EditText para ingresar el sueldo -->
    <EditText
        android:id="@+id/etSueldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su sueldo"/>

    <!-- Botón para realizar el cálculo -->
    <Button
        android:id="@+id/btnCalcularContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"/>

    <Button
        android:id="@+id/btnVolverInicioContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al Inicio"/>

    <!-- Otros elementos según sea necesario -->

</LinearLayout>

